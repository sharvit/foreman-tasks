{
  "name": "foreman-tasks",
  "version": "1.0.0",
  "description": "Foreman Tasks =============",
  "main": "index.js",
  "tfmBuildConfig": "config/tfm-builder.config.js",
  "scripts": {
    "build": "tfm-build --mode=production --config=config/tfm-builder.config.js",
    "lint": "tfm-lint --plugin -d /webpack",
    "test": "tfm-test --plugin",
    "test:watch": "tfm-test --plugin --watchAll",
    "test:current": "tfm-test --plugin --watch",
    "publish-coverage": "tfm-publish-coverage",
    "stories": "tfm-stories --plugin",
    "stories:build": "tfm-build-stories --plugin",
    "stories:deploy": "surge --project .storybook-dist",
    "create-react-component": "yo react-domain"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theforeman/foreman-tasks.git"
  },
  "bugs": {
    "url": "http://projects.theforeman.org/projects/foreman-tasks/issues"
  },
  "peerDependencies": {
    "@theforeman/vendor": ">= 4.0.2"
  },
  "dependencies": {
    "c3": "^0.4.11",
    "humanize-duration": "^3.20.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.0",
    "@theforeman/builder": "../foreman-js/packages/builder",
    "@theforeman/eslint-plugin-foreman": "../foreman-js/packages/eslint-plugin-foreman",
    "@theforeman/stories": "../foreman-js/packages/stories",
    "@theforeman/test": "../foreman-js/packages/test",
    "@theforeman/vendor": "../foreman-js/packages/vendor",
    "@theforeman/vendor-core": "../foreman-js/packages/vendor-core",
    "@theforeman/vendor-dev": "../foreman-js/packages/vendor-dev",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.2",
    "jed": "^1.1.1",
    "prettier": "^1.13.5",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.0.0",
    "surge": "^0.20.3"
  }
}
